<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp"
    tools:context=".Fragments.PillItemAdapter"
    android:id="@+id/llPillItem">


    <TextView
        android:id="@+id/tvPillItem_Qty"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:text="@string/PillQty"
        android:textSize="16sp"
        tools:text="1"
        android:gravity="center"
        android:background="@color/colorOrange"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvPillItem_content"
        android:layout_width="305dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:text="pillName"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ivAlarmOn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_baseline_alarm_on_24"
        android:contentDescription="@string/imgAlarmOnOff"/>


</LinearLayout>