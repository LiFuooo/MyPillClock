<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    tools:context=".Utilities.PillItemAdapter"
    android:id="@+id/llPillItem"
    android:clickable="true"
    android:focusable="true">


    <TextView
        android:id="@+id/tvPillItem_Qty"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorOrange"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/PillQty"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/tvPillItem_content"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="pillName"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/ivAlarmOn"
        app:layout_constraintStart_toEndOf="@+id/tvPillItem_Qty"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivAlarmOn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:contentDescription="@string/imgAlarmOnOff"
        android:focusable="true"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_baseline_alarm_on_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>